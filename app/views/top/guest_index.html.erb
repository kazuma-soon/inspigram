<% content_for(:title, 'Guest_index') %>
<div class="guest-board-index-page">
  <%= render 'shared/navbar' %>
  <div class="container-fluid">
  
    <div class="js-masonry-container">

      <div class="js-masonry-sizer col-6 col-sm-4 col-lg-3"></div>

      <div class="row mt-3">
        <% @all_boards.each do |board| %>
          <div class="js-masonry-item col-6 col-sm-4 col-lg-3" id="<%= board.id %>">
            <div class="card mb-3 likes-board-box">
              <%= image_tag board.board_image.url, class: 'rounded likes-image' %>
            </div>
          </div>
        <% end %>
      </div>
    </div> <!-- .js-masonry-container -->
  </div>
    <p class="text-center mt-3 mb-3 likes-no-board">No more content</p>
</div>